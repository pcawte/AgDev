_mos_i2c_write:
	push	ix
	ld 		ix,0
	add 	ix, sp
	ld		c, (ix+6)
	ld		b, (ix+9)
	ld		hl, (ix+12)
	ld a,	mos_i2c_write
	rst.lil	08h
	ld		sp,ix
	pop		ix
	ret

_mos_i2c_read:
	push	ix
	ld 		ix,0
	add 	ix, sp
	ld		c, (ix+6)
	ld		b, (ix+9)
	ld		hl, (ix+12)
	ld a,	mos_i2c_read
	rst.lil	08h
	ld		sp,ix
	pop		ix
	ret

_mos_port_read:
	push	ix
	ld	ix, 0
	add	ix, sp
	push	bc
	ld	bc, 0
	ld	c, (ix+6)
	in	a, (bc)
	pop	bc
	pop	ix
	ret

_mos_port_write:
	push	ix
	ld	ix, 0
	add	ix, sp
	push	bc
	ld	bc, 0
	ld	c, (ix+6)
	ld	a, (ix+9)
	out	(bc),a
	pop	bc
	pop	ix
	ret

